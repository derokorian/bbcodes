{
    "name": "derokorian/bbcode",
    "description": "Simple BBCode parser",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ryan Pallas",
            "email": "derokorian@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=5.6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.2",
        "derokorian/gen-synth": "^2.0.1"
    },
